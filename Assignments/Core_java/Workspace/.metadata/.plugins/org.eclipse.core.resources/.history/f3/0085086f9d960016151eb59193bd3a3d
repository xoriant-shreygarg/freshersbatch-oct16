package com.nestedclasses;

interface BloodPressureMonitor
{
    public void onBloodPressureChanged(int bloodPressure);
}

class BloodPressure
{
    private BloodPressureMonitor listener;

    private int value;

    public void setOnIntegerChangeListener(BloodPressureMonitor listener)
    {
        this.listener = listener;
    }

	public BloodPressure(int value) {
		super();
		this.value = value;
	}
    
}

public class Hospital {

	public static void main(String[] args) {
		BloodPressure bloodPressure = 0;
		bloodPressure.setOnIntegerChangeListener(new BloodPressureMonitor() {
			
			@Override
			public void onBloodPressureChanged(int bloodPressure) {
				System.out.println("Warning!! Blood pressure = "+bloodPressure);
				if(bloodPressure > 140)
					System.out.println("Warning!! Blood pressure = "+bloodPressure);
			}
		});
		while(true){
			bloodPressure = new BloodPressure((int)(Math.random()*100) + 50);
		}
	}

}
