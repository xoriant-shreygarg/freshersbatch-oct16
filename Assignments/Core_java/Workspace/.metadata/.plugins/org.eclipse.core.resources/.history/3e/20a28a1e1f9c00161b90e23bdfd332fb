package com.java8;

import java.util.Arrays;
import java.util.function.Consumer;
import java.util.function.Predicate;

public class Java8Features3 {

	public static void main(String[] args) {
		Predicate<String> predicate = (String s) -> s.length()>10;
		System.out.println("Length greater than 10? "+ predicate.test("Hello world"));
		
		Consumer<String[]> consumer = (String[] s) -> Arrays.toString(s);
		System.out.println(consumer.accept(new String[]{"Hello",","," welcome"," to"," java 8"}));
	}
}
