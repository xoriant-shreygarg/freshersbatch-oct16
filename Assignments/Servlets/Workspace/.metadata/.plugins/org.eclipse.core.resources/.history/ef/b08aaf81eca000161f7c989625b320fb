package com.servlets;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

@WebServlet("/AddBooksServlet")
public class AddBooksServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		String username = request.getParameter("uname");
		HttpSession session = request.getSession(true);
		StringBuffer buffer = new StringBuffer();
		if(request.getParameter("c")!=null)
			buffer.append(",C");
		if(request.getParameter("cpp")!=null)
			buffer.append(",C++");
		if(request.getParameter("c")!=null)
			buffer.append(",Java");
		if(request.getParameter("history1")!=null)
			buffer.append(",History 1");
		if(request.getParameter("history2")!=null)
			buffer.append(",History 2");
		if(request.getParameter("history3")!=null)
			buffer.append(",History 3");
		if(session.getAttribute("booksInCart")==null)
		{
			session.setAttribute("booksInCart", );
		}
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		doGet(request, response);
	}

}
